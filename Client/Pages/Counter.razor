@page "/counter"
@inject ActivePageService ActivePageService
@inject HttpClient Http
@inject IToastService toastService
<PageTitle>Show Orders</PageTitle>


<p>Visual display of all orders</p>

@if (ordersName == null)
{ //TODO сделать анимацию тут


    <p><em>Loading...</em></p>
}
else{

    <div>
        <label for="stateInput">Выберите заказа:</label>
        <input type="text" id="orderSearch" @bind="selectedOrderName" list="ordersNameArray" placeholder="Поиск заказов" />
   
        <datalist id="ordersNameArray">
            @foreach (var orderName in ordersName)
            {
                <option value="@orderName"></option>
            }
        </datalist>

        @if (selectedOrderName != "")
        {
            <button @onclick="GetOneOrder" class="btn btn-primary" style="margin-right: 10px;">Получить выбранный заказ</button>      
        }
        <button @onclick="GetAllOrders" class="btn btn-success" >Получить все заказы</button>
        <BlazoredToasts />
    </div>



    if (orders != null)
    {
        <link rel="stylesheet" href="css/styles.css" />
        @foreach (var order in orders)
        {
            <div class="order">
                <h4>Order Name: @order.Name</h4>
                <h4>State: @order.State</h4>
                <div class="windows">
                    @if (order.Windows.Count != 0)
                    {
                        <h5>Windows:</h5>
                        @foreach (var window in order.Windows)
                        {
                            <div class="window">
                                <p>Window: @window.Name</p>
                                <p>Quantity of Windows: @window.QuantityOfWindows</p>
                                <p>Total SubElements: @window.TotalSubElements</p>
                                <div class="sub-elements">
                                    <h6>SubElements:</h6>
                                    @foreach (var subElement in window.SubElements)
                                    {
                                        <p>Element: @subElement.Id, Type: @subElement.Type, Width: @subElement.Width, Height: @subElement.Height</p>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        }

        

    }
}

@code {
    private Order[]? orders;
    private string[]? ordersName;
    private string selectedOrderName = "";

    protected override async Task OnInitializedAsync()
    {  

        ActivePageService.ActivePage = "counter";
        ordersName = await Http.GetFromJsonAsync<string[]>("Order/GetOrdersName");
        StateHasChanged();
    }

 
    private async void GetAllOrders()
    {        
        orders = await Http.GetFromJsonAsync<Order[]>("Order/GetAllOrders");
        selectedOrderName = "";
        StateHasChanged();
    }

    private async void GetOneOrder()
    {
        if (selectedOrderName != "")
        {
            orders = await Http.GetFromJsonAsync<Order[]>($"Order/GetOneOrder?nameOrder={selectedOrderName}");
            StateHasChanged();
        }
        else
            toastService.ShowInfo($"Не выбрано название заказа");
    }


}
